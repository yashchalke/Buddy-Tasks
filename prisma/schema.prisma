generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  tasks Task[]

}

model Task {
  id Int @id @default(autoincrement())
  task String
  isComplete Boolean @default(false)
  createdAt DateTime @default(now())

  userId Int
  user User @relation(fields: [userId],references: [id])
}
